<h1 class="text-center" id="heading">Eat-Da-Burgers !</h1>

<br>

<div class="row">
  <div class="col-sm-6 text-center">
    <h2 id="sub">Order Burgers</h2>

    <ul style="list-style-type:none;" id="nam1">
      {{#each burgers }}
        {{#unless devoured}}
          {{> burger-block devour=false}}
        {{/unless}}
      {{/each}}
    </ul>

  </div>

  <div class="col-sm-6 text-center">
    <h2 id="sub">Devoured Burgers</h2>

    <ul style="list-style-type:none;" id="nam1">
      {{#each burgers}}
        {{#if devoured}}
          {{> burger-block devour=true}}
        {{/if}}
      {{/each}}
    </ul>

  </div>
</div> 

<div class="row justify-content-around">
  <div class="text-center">  

    <h2>What is your choice ?</h2>

    <form class="create-form">
      <div class="form-group">
        {{!-- <label for="bu" id="nam">Burger Name:</label> --}}
        <br>
        <input type="text" id="bu" name="name">
      </div>
      <button type="submit">Order</button>
    </form>

  </div>  
</div>